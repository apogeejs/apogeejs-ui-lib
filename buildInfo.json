{
    "repoName": "apogeejs-ui-lib",

    "esModule": {
        "taskList": [
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-ui-lib/versionInfo.json"
                ]
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-ui-lib/resources/**/*"
                ],
                "childFolder": "resources"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-ui-lib/style/**/*"
                ],
                "childFolder": "style"
            },
            {
                "type": "packageLib",
                "esModuleFileName": "apogeeUiLib.js",
                "externalLibs": [
                    "/apogeejs-base-lib/src/apogeeBaseLib.js",
                    "/apogeejs-util-lib/src/apogeeUtilLib.js"
                ]
            }
        ]
    },
    "npmModule": {
        "taskList": [
            {
                "type": "copyAndReplace",
                "srcFileUrl": "/apogeejs-ui-lib/package.json",
                "replacementList": [
                    {
                        "marker": "[RELEASE_VERSION]",
                        "lib": "this",
                        "type": "version"
                    },
                    {
                        "marker": "[APOGEE_UTIL_DEP_VERSION]",
                        "lib": "apogeejs-util-lib",
                        "type": "npmVersion"
                    },
                    {
                        "marker": "[APOGEE_BASE_DEP_VERSION]",
                        "lib": "apogeejs-base-lib",
                        "type": "npmVersion"
                    }
                ]
            },
            {
                "type": "packageLib",
                "esModuleFileName": "apogeeUiLib.js",
                "npmModuleFileName": "apogeejs-ui-lib.js",
                "externalLibs": [
                    "/apogeejs-base-lib/src/apogeeBaseLib.js",
                    "/apogeejs-util-lib/src/apogeeUtilLib.js"
                ],
                "externalLibMapping": {
                    "/apogeejs-base-lib/src/apogeeBaseLib.js": "apogeejs-base-lib",
                    "/apogeejs-util-lib/src/apogeeUtilLib.js": "apogeejs-util-lib"
                }
            }
        ]
    }
}